<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dicoding.destinatik.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.dicoding.destinatik.ui.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" >
    </fragment>

<!--    <fragment-->
<!--        android:id="@+id/notificationsFragment"-->
<!--        android:name="com.dicoding.destinatik.ui.NotificationsFragment"-->
<!--        android:label="Notifications"-->
<!--        tools:layout="@layout/fragment_notifications" />-->

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.dicoding.destinatik.ui.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dicoding.destinatik.ui.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.dicoding.destinatik.ui.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.dicoding.destinatik.ui.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.dicoding.destinatik.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_loginFragment"
            app:destination="@id/loginActivity" />
    </fragment>
    <activity
        android:id="@+id/forgotPasswordActivity"
        android:name="com.dicoding.destinatik.ui.ForgotPasswordActivity"
        android:label="activity_forgot_password"
        tools:layout="@layout/activity_forgot_password" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.dicoding.destinatik.ui.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/registerActivity"
        android:name="com.dicoding.destinatik.ui.RegisterActivity"
        android:label="activity_register"
        tools:layout="@layout/activity_register" />
    <activity
        android:id="@+id/verifyActivity"
        android:name="com.dicoding.destinatik.ui.VerifyActivity"
        android:label="activity_verify"
        tools:layout="@layout/activity_verify" />
    <activity
        android:id="@+id/resetActivity"
        android:name="com.dicoding.destinatik.ui.ResetActivity"
        android:label="activity_reset"
        tools:layout="@layout/activity_reset" />
</navigation>
